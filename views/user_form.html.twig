{% extends 'layout.html.twig' %}

{% block title %}Nouveau compte{% endblock %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}
{% for flashMessageError in app.session.flashbag.get('error') %}
<div class="alert alert-success">
    {{ flashMessageError }}
</div>
{% endfor %}
{% if form_errors(userForm.password.first) %}
<div class="alert alert-danger">
    {{ form_errors(userForm.password.first) }}
</div>
{% endif %}
<div class="container">

<div id="userForm">
<h2 class="text-center">{{ block('title') }}</h2>
{{ form_start(userForm, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
       {{ form_label(userForm.lastName, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label',
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userForm.lastName) }}
            {{ form_widget(userForm.lastName, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
       {{ form_label(userForm.firstName, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label',
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userForm.firstName) }}
            {{ form_widget(userForm.firstName, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
       {{ form_label(userForm.street, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label',
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userForm.street) }}
            {{ form_widget(userForm.street, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
       {{ form_label(userForm.postalCode, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label',
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userForm.postalCode) }}
            {{ form_widget(userForm.postalCode, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
        <div class="form-group">
       {{ form_label(userForm.city, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label',
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userForm.city) }}
            {{ form_widget(userForm.city, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
        <div class="form-group">
       {{ form_label(userForm.phoneNumber, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label',
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userForm.phoneNumber) }}
            {{ form_widget(userForm.phoneNumber, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
       {{ form_label(userForm.username, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label',
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userForm.username) }}
            {{ form_widget(userForm.username, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.password.first, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.password.first, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.password.second, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.password.second, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <input type="submit" class="btn btn-confirm" value="Confirmer" />
        </div>
    </div>
{{ form_end(userForm) }}
</div>
</div>
{% endblock %}