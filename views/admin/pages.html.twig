{% extends "admin/layout.html.twig" %}

{% block title %}Edition page{% endblock %}

{% block content %}

<div class="container">
    <p>
        <h2>{{ page.name }}</h2>

        {% if pageForm %}
            {{ form_start(pageForm) }}
                <div class="form-group">
                    {{ form_errors(pageForm.content) }}
                    {{ form_widget(pageForm.content, { 'attr':  {
                        'rows': '4',
                        'class': 'form-control ckeditor',
                        'placeholder': page.content
                    }}) }}
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Modifier la page" />
                </div>
                {% endif %}
    </p>
</div>
{% endblock %}